<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="thoughtworks.academy.myandroiddemo.WelcomeActivity">

        <include layout="@layout/title" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/welcome" />

        <Button
            android:id="@+id/button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Toast" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Simple ListView" />

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Girl ListView" />

        <Button
            android:id="@+id/open_baidu_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Open Baidu" />

        <Button
            android:id="@+id/dial_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dial" />

        <Button
            android:id="@+id/network_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network Image" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/send_data_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:singleLine="true" />

            <Button
                android:id="@+id/send_data_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Send to Next" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/receive_data_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receive From Next" />

            <TextView
                android:id="@+id/receive_data_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:singleLine="true" />
        </LinearLayout>

        <Button
            android:id="@+id/layout_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="layout" />

        <thoughtworks.academy.myandroiddemo.NumberAdderLayout
            android:id="@+id/number_adder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></thoughtworks.academy.myandroiddemo.NumberAdderLayout>

        <Button
            android:id="@+id/touch_ball_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Touch Ball" />

        <Button
            android:id="@+id/network_image_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Load Image From Network" />

        <Button
            android:id="@+id/stack_view_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="StackView" />


    </LinearLayout>
</ScrollView>

